<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form' }) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>
    <div class="form-group row">      
      <div class="col-xs-5">
        <%= f.text_field :first_name, :autofocus => true, class: 'form-control', placeholder: 'first name' %>  
      </div>
      <div class="col-xs-2">
        <%= f.text_field :middle_name, class: 'form-control', placeholder: 'm' %>  
      </div>      
      <div class="col-xs-5">
        <%= f.text_field :last_name, class: 'form-control', placeholder: 'last name' %>  
      </div>      
    </div>

    <div class="form-group row">     
      <div class="col-xs-12">
        <%= f.email_field :email, class: 'form-control', placeholder: 'email@address.com' %>  
      </div>       
    </div>

    <div class="form-group row">
      <div class="col-xs-6">
        <%= f.password_field :password, class: 'form-control', placeholder: 'password' %>
      </div>
      <div class="col-xs-6">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'password confirmation' %>
      </div>
    </div>
    
     <%= f.submit 'Sign up', :class => 'button right' %>
  <% end %>
</div>
