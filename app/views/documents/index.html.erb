<div class="page-header">
  <%= link_to new_document_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Document
  <% end %>
  <h1>Listing documents</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
            <th>Department</th>
            <th>Name</th>
            <th>Description</th>
            <th>Url</th>
            <th>Is active</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @documents) do |document| %>
            <td><%= document.department.blank? ? "-- Not Available --" : document.department.name %></td>
            <td><%= document.name %></td>
            <td><%= document.description %></td>
            <td><%= document.url %></td>
            <td><%= document.is_active %></td>
            <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
