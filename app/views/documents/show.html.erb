<div class="page-header">
  <%= link_to documents_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_document_path(@document), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show document</h1>
</div>

<dl class="dl-horizontal">
  <dt>Department:</dt>
  <dd><%= @document.department_id %></dd>

  <dt>Name:</dt>
  <dd><%= @document.name %></dd>

  <dt>Description:</dt>
  <dd><%= @document.description %></dd>

  <dt>Url:</dt>
  <dd><%= @document.url %></dd>

  <dt>Is active:</dt>
  <dd><%= @document.is_active %></dd>

</dl>
