<%= form_for(@time_clock, :url => time_sheet_index_path, :method => :post, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @time_clock.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@time_clock.errors.count, "error") %> prohibited this time clock entry from being saved:</h4>

      <ul>
      <% @time_clock.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :term_id, :class => "col-sm-4 control-label" %>
    <div class="col-sm-5">
       <%= f.collection_select(:user_id, User.all, :id, :full_name, {prompt: "-- Select an Employee --"}, :class => "form-control" ) %>      
    </div>
  </div>

   <div class="form-group">
      <%= f.label :start_time, "Start Time", :class => "col-sm-4 control-label" %>
      <div class="col-sm-5">
        <div class='input-group date datetimepicker'>            
            <%= f.text_field :start_time, :class => "form-control" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>            
            </span>
        </div>            
      </div>
  </div>

  <div class="form-group">
      <%= f.label :end_time, "End Time", :class => "col-sm-4 control-label" %>
      <div class="col-sm-5">
        <div class='input-group date datetimepicker'>            
            <%= f.text_field :end_time, :class => "form-control" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>            
            </span>
        </div>            
      </div>
  </div>

  <div class="form-group">
    <%= f.label :comments, :class => "col-sm-4 control-label" %>
    <div class="col-sm-5">
      <%= f.text_area :comments, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-7">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
